<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_record_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/side_nav_bar"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:textColor="@color/colorMoreLightText">

        <TextView
            android:id="@+id/label_record_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:text="@string/record_tags_label"
            android:textColor="@color/colorLightLabelText"/>

      <!--  <TextView
            android:id="@+id/text_view_record_tags"
            android:layout_toRightOf="@id/label_record_tags"
            android:layout_toEndOf="@id/label_record_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"/>-->

        <WebView
            android:id="@+id/web_view_record_tags"
            android:layout_toRightOf="@id/label_record_tags"
            android:layout_toEndOf="@id/label_record_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:minHeight="50dp"
            android:background="@android:color/transparent"
            tools:ignore="WebViewLayout" />

        <ToggleButton
            android:id="@+id/toggle_button_expander"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColorLink="@android:color/transparent"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:textOn=""
            android:textOff=""/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/layout_expander"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/web_view_record_tags"
            app:el_duration="300"
            app:el_expanded="false"
            app:el_parallax="0.5">
<!--            android:layout_below="@id/text_view_record_tags"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="@color/colorMoreLightText">

                <TextView
                    android:id="@+id/label_record_author"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="@string/record_author_label"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorLightLabelText" />

                <TextView
                    android:id="@+id/text_view_record_author"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/label_record_author"
                    android:layout_toEndOf="@id/label_record_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/label_record_url"
                    android:layout_below="@id/text_view_record_author"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/record_uri_label"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorLightLabelText" />

                <TextView
                    android:id="@+id/text_view_record_url"
                    android:layout_below="@id/text_view_record_author"
                    android:layout_toRightOf="@id/label_record_url"
                    android:layout_toEndOf="@id/label_record_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:autoLink="web"
                    android:textColorLink="@color/colorBlueDark"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/label_record_date"
                    android:layout_below="@id/text_view_record_url"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/record_date_label"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorLightLabelText" />

                <TextView
                    android:id="@+id/text_view_record_date"
                    android:layout_below="@id/text_view_record_url"
                    android:layout_toRightOf="@id/label_record_date"
                    android:layout_toEndOf="@id/label_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="8dp" />

            </RelativeLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
    </RelativeLayout>

    <com.gee12.mytetroid.views.TetroidWebView
        android:id="@+id/web_view_record_content"
        android:layout_below="@id/layout_record_fields"
        android:textIsSelectable="true"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

</RelativeLayout>