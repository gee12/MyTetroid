<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/data_item_row_height"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/file_view_line_num"
        android:layout_toLeftOf="@id/file_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:textSize="@dimen/font_default"/>

    <ImageView
        android:id="@+id/file_view_icon"
        android:layout_toRightOf="@id/file_view_line_num"
        android:layout_toLeftOf="@id/file_view_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="top"
        android:padding="2dp"
        android:background="@drawable/ic_file"/>

    <TextView
        android:id="@+id/file_view_name"
        android:layout_toRightOf="@id/file_view_icon"
        android:layout_toLeftOf="@id/file_view_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/font_default"/>
        <!--app:layout_constraintHorizontal_weight="4"-->

    <TextView
        android:id="@+id/file_view_size"
        android:layout_toRightOf="@id/file_view_name"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/font_default"/>

</RelativeLayout>