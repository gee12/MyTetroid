<resources>

    <!-- Основная тема -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/title_middle_color</item>
        <item name="colorPrimaryDark">@color/title_start_color</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/background_default</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>

        <item name="dialogTheme">@style/AppDialog</item>
        <item name="alertDialogTheme">@style/AppDialog</item>

        <item name="buttonStyle">@style/AppButton</item>
        <item name="imageButtonStyle">@style/AppImageButton</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="editTextStyle">@style/AppEditText</item>
        <item name="checkboxStyle">@style/AppCheckbox</item>
        <item name="spinnerStyle">@style/AppSpinner</item>
        <item name="autoCompleteTextViewStyle">@style/AppSearchAutoCompleteTextView</item>
        <item name="android:listViewStyle">@style/AppListView</item>
    </style>

    <!-- Тема для экрана настроек -->
    <style name="AppPreferenceTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/AppPreferenceTextView</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/background_dialog_default</item>
        <item name="android:windowTitleStyle">@style/AppDialogTitle</item>
    </style>

    <style name="AppDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="AppToolbar" parent="Theme.AppCompat">
    </style>

    <style name="AppPopupMenu" parent="Widget.AppCompat.PopupMenu">
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/background_button</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/background_button</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textColorHint">@color/text_4</item>
    </style>

    <style name="AppSearchAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textColorHint">@color/text_4</item>
    </style>

    <style name="AppListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@color/list_separator</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_2</item>
    </style>

    <style name="AppPreferenceTextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
    </style>

    <style name="AppCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.DropDown">
    </style>

    <style name="RootLayout">
        <item name="android:background">@color/background_default</item>
    </style>

    <style name="Title">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="Text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_2</item>
    </style>

    <style name="AppLabel" parent="@style/AppTextView">
    </style>

    <style name="AppLabelInLayout" parent="@style/AppLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppEditTextInLayout" parent="@style/AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GridCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">left|top</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="GridCellLabel" parent="GridCell">
        <item name="android:textColor">@color/text_3</item>
    </style>

    <style name="GridCellValue" parent="GridCell">
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="fabSize">auto</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="LabelEmptyList">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/text_empty_list</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="RecordLabel">
        <item name="android:textColor">@color/record_field_label</item>
    </style>

    <style name="RecordValue">
        <item name="android:textColor">@color/record_field_value</item>
    </style>

    <style name="MainTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/list_separator</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/list_separator</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>


    <!-- Storage statistic -->

    <style name="StatsLabel">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="StatsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:text">0</item>
    </style>

    <style name="StatsLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:background">@color/list_separator</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <!-- com.github.clans.fab.FloatingActionMenu -->

    <style name="FabClansMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>

        <item name="menu_fab_size">normal</item>
        <item name="menu_buttonSpacing">0dp</item>
        <item name="menu_animationDelayPerItem">50</item>
        <item name="menu_openDirection">up</item>

<!--        <item name="menu_fab_show_animation">@anim/fab_scale_up</item>-->
<!--        <item name="menu_fab_hide_animation">@anim/fab_scale_down</item>-->

        <item name="menu_colorNormal">@color/fab_color_normal</item>
        <item name="menu_colorPressed">@color/fab_color_pressed</item>
        <item name="menu_colorRipple">@color/fab_color_ripple</item>
        <item name="menu_backgroundColor">@android:color/transparent</item>

<!--        <item name="menu_showShadow">true</item>-->
<!--        <item name="menu_shadowColor">#66000000</item>-->
<!--        <item name="menu_shadowRadius">2dp</item>-->
<!--        <item name="menu_shadowXOffset">1dp</item>-->
<!--        <item name="menu_shadowYOffset">1dp</item>-->

        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="useCompatPadding">true</item>

        <!--Заменяется menu_labels_style-->
<!--        <item name="menu_labels_showAnimation">@anim/fab_slide_in_from_left</item>-->
<!--        <item name="menu_labels_hideAnimation">@anim/fab_slide_in_from_right</item>-->

        <item name="menu_labels_margin">0dp</item>
        <item name="menu_labels_paddingTop">4dp</item>
        <item name="menu_labels_paddingRight">8dp</item>
        <item name="menu_labels_paddingBottom">4dp</item>
        <item name="menu_labels_paddingLeft">8dp</item>
        <item name="menu_labels_padding">8dp</item>

        <item name="menu_labels_textColor">#050</item>
        <item name="menu_labels_textSize">16sp</item>
        <item name="menu_labels_cornerRadius">6dp</item>

        <item name="menu_labels_colorNormal">@color/fab_color_normal</item>
        <item name="menu_labels_colorPressed">@color/fab_color_pressed</item>
        <item name="menu_labels_colorRipple">@color/fab_color_ripple</item>

        <item name="menu_labels_showShadow">true</item>
        <item name="menu_labels_singleLine">false</item>
        <item name="menu_labels_maxLines">-1</item>
        <item name="menu_labels_ellipsize">none</item>
        <item name="menu_labels_position">left</item>
    </style>

    <style name="FabClansLabel">
        <item name="android:padding">12dp</item>

        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/fab_color_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textStyle">bold</item>

<!--        <item name="android:shadowColor">#000</item>-->
<!--        <item name="android:shadowRadius">2</item>-->
<!--        <item name="android:shadowDx">1</item>-->
<!--        <item name="android:shadowDy">3</item>-->
    </style>

    <style name="FabClansButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>

<!--        <item name="fab_showAnimation">@anim/fab_slide_in_from_left</item>-->
<!--        <item name="fab_hideAnimation">@anim/fab_slide_in_from_right</item>-->

        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/fab_color_normal_dark</item>
        <item name="fab_colorPressed">@color/fab_color_pressed_dark</item>
        <item name="fab_colorRipple">@color/fab_color_ripple</item>

        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="useCompatPadding">true</item>
    </style>

</resources>
